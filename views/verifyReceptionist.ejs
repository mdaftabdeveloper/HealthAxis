<% if (!session.receptionistEmail) { %>
    <script>
        window.location.href = "./html/receptionistLogin.html";
    </script>
    <% } %>

        <!DOCTYPE html>
        <html lang="en">

        <head>
            <meta charset="UTF-8">
            <title>Verify Email - Health Axis</title>
            <link rel="stylesheet" href="/css/verifyReceptionist.css">
        </head>

        <body>
            <!-- Header -->
            <header> Hello Receptionist, Please Verify Your Email </header>

            <!-- OTP Verification Box -->
            <div class="verify-box">
                <h2>Verify Your Email</h2>

                <!-- OTP Verification Form -->
                <form action="/VerifyReceptionistOtpServlet" method="post">
                    <label for="email">Registered Email:</label>
                    <input type="email" id="email" name="email" value="<%= session.receptionistEmail %>" readonly>

                    <label for="otp">Enter OTP:</label>
                    <input type="text" id="otp" name="otp" maxlength="6" required>

                    <button type="submit">Verify OTP</button>
                </form>

                <!-- Resend OTP Form -->
                <form action="ResendOtpServlet" method="post" style="margin-top: 15px;">
                    <input type="hidden" name="email" value="<%= session.receptionistEmail %>">
                    <button type="submit" id="resendBtn" disabled>Resend OTP (02:00)</button>
                </form>
            </div>

            <!-- Footer -->
            <footer> &copy; 2025 Health Axis | All rights reserved </footer>

            <!-- JS Countdown Timer -->
            <script src="../js/verifyReceptionist.js"></script>
        </body>

        </html>